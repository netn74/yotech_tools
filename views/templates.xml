        <template id="yotech_tools_payment_delivery" name="Delivery Costs" inherit_id="website_sale_delivery.payment_delivery">
            <xpath expr="//t[@t-if='delivery.available']" position="replace">
                <t t-if="delivery.available">
                    <t t-if="not delivery.show_under_cond">
                        <label>
                            <input t-att-value="delivery.id" type="radio" name="delivery_type"
                                t-att-checked="order.carrier_id and order.carrier_id.id == delivery.id and 'checked' or False"/>
                            <span t-field="delivery.name"/>
                            <t t-if="delivery.price == 0" >
                                <t t-if="delivery.free_delivery_allow" >
                                    <span class="badge" t-field="delivery.price"
                                        t-field-options='{
                                            "widget": "monetary",
                                            "from_currency": "delivery.product_id.company_id.currency_id",
                                            "display_currency": "website_sale_order.currency_id"
                                        }'/>
                                </t>
                                <t t-if="not delivery.free_delivery_allow" >
                                    <span class="badge">Not defined yet!</span>
                                </t>
                            </t>
                            <t t-if="delivery.price != 0">
                                <span class="badge" t-field="delivery.price"
                                    t-field-options='{
                                        "widget": "monetary",
                                        "from_currency": "delivery.product_id.company_id.currency_id",
                                        "display_currency": "website_sale_order.currency_id"
                                    }'/>
                            </t>
                            <div t-field="delivery.website_description" class="text-muted"/>
                        </label>
                    </t>
                    <t t-if="delivery.show_under_cond">
                        <t t-if="delivery.condition_type == 'Partner Price List'">
                            <t t-if= "delivery.partner_price_list_type == website_sale_order.partner_id.property_product_pricelist">
                                <label>
                                    <input t-att-value="delivery.id" type="radio" name="delivery_type"
                                        t-att-checked="order.carrier_id and order.carrier_id.id == delivery.id and 'checked' or False"/>
                                    <span t-field="delivery.name"/>
                                    <t t-if="delivery.price == 0">
                                        <t t-if="delivery.free_delivery_allow" >
                                            <span class="badge" t-field="delivery.price"
                                                t-field-options='{
                                                    "widget": "monetary",
                                                    "from_currency": "delivery.product_id.company_id.currency_id",
                                                    "display_currency": "website_sale_order.currency_id"
                                                }'/>
                                        </t>
                                        <t t-if="not delivery.free_delivery_allow" >
                                            <span class="badge">Not defined yet!</span>
                                        </t>
                                    </t>
                                    <t t-if="delivery.price != 0">
                                        <span class="badge" t-field="delivery.price"
                                            t-field-options='{
                                                "widget": "monetary",
                                                "from_currency": "delivery.product_id.company_id.currency_id",
                                                "display_currency": "website_sale_order.currency_id"
                                            }'/>
                                    </t>
                                    <div t-field="delivery.website_description" class="text-muted"/>
                                </label>
                            </t>
                        </t>
                    </t>
                </t>
            </xpath>
        </template>

